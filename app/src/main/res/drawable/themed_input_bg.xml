<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background fill -->
    <solid android:color="#1A1A2E" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border stroke -->
    <stroke
        android:width="1.5dp"
        android:color="#7B2CBF" />

    <!-- Optional padding inside -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
