<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="booking"
            type="com.example.swiftride.data.model.BookingEntity" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewBookingId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@{@string/booking_id_format(booking.bookingId)}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Booking ID: 123" />

            <TextView
                android:id="@+id/textViewBookingUserId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{@string/user_id_format(booking.bookingUserId)}"
                app:layout_constraintTop_toBottomOf="@+id/textViewBookingId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="User ID: user@example.com" />

            <TextView
                android:id="@+id/textViewBookingCarId"
                android.layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{@string/car_id_format(booking.bookingCarId)}"
                app:layout_constraintTop_toBottomOf="@+id/textViewBookingUserId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Car ID: 10" />

            <TextView
                android:id="@+id/textViewBookingDates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{@string/booking_dates_format(booking.pickupDate, booking.returnDate)}"
                app:layout_constraintTop_toBottomOf="@+id/textViewBookingCarId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Dates: 2023-01-01 to 2023-01-05" />

            <TextView
                android:id="@+id/textViewBookingPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{@string/total_price_format(booking.totalPrice)}"
                app:layout_constraintTop_toBottomOf="@+id/textViewBookingDates"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Total Price: $250.00" />

            <TextView
                android:id="@+id/textViewBookingStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="italic"
                android:text="@{@string/booking_status_format(booking.bookingStatus)}"
                app:layout_constraintTop_toBottomOf="@+id/textViewBookingPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Status: Confirmed" />

            <LinearLayout
                android:id="@+id/layoutBookingActions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewBookingStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/buttonBookingSetConfirmed"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Confirmed"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/buttonBookingSetCancelled"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Cancelled"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>