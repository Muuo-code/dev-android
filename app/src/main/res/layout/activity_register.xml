<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0A0A23">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp"
        android:layout_marginTop="60dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swiftride"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#9B5CFF"
            android:layout_marginBottom="16dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_an_account_to_continue"
            android:textColor="#B0B0C3"
            android:textSize="15sp"
            android:layout_marginBottom="40dp" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/full_name"
            android:padding="14dp"
            android:inputType="textPersonName"
            android:background="@drawable/themed_input_bg"
            android:textColor="@android:color/white"
            android:textColorHint="#8080A0"
            android:layout_marginBottom="20dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/email"
            android:padding="14dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/themed_input_bg"
            android:textColor="@android:color/white"
            android:textColorHint="#8080A0"
            android:layout_marginBottom="20dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/password"
            android:padding="14dp"
            android:inputType="textPassword"
            android:background="@drawable/themed_input_bg"
            android:textColor="@android:color/white"
            android:textColorHint="#8080A0"
            android:layout_marginBottom="20dp" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/confirm_password"
            android:padding="14dp"
            android:inputType="textPassword"
            android:background="@drawable/themed_input_bg"
            android:textColor="@android:color/white"
            android:textColorHint="#8080A0"
            android:layout_marginBottom="28dp" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/register"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:backgroundTint="#7B2CBF"
            android:layout_marginBottom="24dp" />

        <!-- Already have an account? -->
        <TextView
            android:id="@+id/tvLoginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account_login"
            android:textColor="#9B5CFF"
            android:textSize="15sp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
