<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0A0A23">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Greeting -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_ready_for_your_next_ride"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#9B5CFF"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_your_ride_in_seconds"
            android:textSize="14sp"
            android:textColor="#B0B0C3"
            android:layout_marginBottom="20dp" />

        <!-- Vehicle Section -->
        <TextView
            android:id="@+id/tvVehiclesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/our_vehicles"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#7B2CBF"
            android:layout_marginBottom="12dp" />

        <!-- First row of vehicles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="75dp"
                android:src="@drawable/axela"
                android:scaleType="centerCrop"
                android:background="#1A1A2E"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="75dp"
                android:src="@drawable/cayenne"
                android:scaleType="centerCrop"
                android:background="#1A1A2E"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="75dp"
                android:src="@drawable/sample_car"
                android:scaleType="centerCrop"
                android:background="#1A1A2E"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Second row of vehicles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="75dp"
                android:src="@drawable/gle"
                android:scaleType="centerCrop"
                android:background="#1A1A2E"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="75dp"
                android:src="@drawable/civic"
                android:scaleType="centerCrop"
                android:background="#1A1A2E"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

        </LinearLayout>


        <!-- Why SwiftRide -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/why_swiftride"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fast_reliable_bookings"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wide_range_of_vehicles"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trusted_by_thousands"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp" />

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/_10k_rides"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/_4_8_rating"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/_5_years"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Slogan -->
        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ride_smart_ride_swift"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#9B5CFF"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBookWithUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_with_us"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/deep_purple"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>


    </LinearLayout>
</ScrollView>
