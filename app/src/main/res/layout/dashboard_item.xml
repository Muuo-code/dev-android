<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#1C1230"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:clipToOutline="true"
    android:elevation="4dp">

    <!-- Content Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:padding="8dp"
        android:layout_marginBottom="12dp">

        <!-- Car Image -->
        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#222" />

        <!-- Car Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvCarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvBookingDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date → End Date"
                android:textSize="14sp"
                android:textColor="#B0B0C3" />

            <TextView
                android:id="@+id/tvBookingRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City → City"
                android:textSize="14sp"
                android:textColor="#B0B0C3" />
        </LinearLayout>
    </LinearLayout>

    <!-- Price + Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left: Price + Track -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0/day"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track"
                android:textColor="@android:color/white"
                android:backgroundTint="#1E3A8A"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>

        <!-- Right: Cancel + Pay -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:backgroundTint="#D72638"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay"
                android:textColor="@android:color/white"
                android:backgroundTint="#2EBF4F"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
